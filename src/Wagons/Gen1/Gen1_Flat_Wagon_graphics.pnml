#define GEN1_FLAT_LIVERY(NAME, L, OFFSET) \
	spriteset(spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S1, format_string("gfx/Wagons/Gen1/Gen1_Flat_Wagon_%s.png", #NAME)) { \
		template_2cc_wagons(OFFSET, 1) \
	} \
	spriteset(spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S2, format_string("gfx/Wagons/Gen1/Gen1_Flat_Wagon_%s.png", #NAME)) { \
		template_2cc_wagons(OFFSET, 32) \
	} \
	spriteset(spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S3, format_string("gfx/Wagons/Gen1/Gen1_Flat_Wagon_%s.png", #NAME)) { \
		template_2cc_wagons(OFFSET, 64) \
	} \
	spritegroup spritegroup_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L { \
		loading: [spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S1, spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S2, spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S3]; \
		loaded: [spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S1, spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S2, spriteset_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _ ## L ## _S3]; \
	}

#define GEN1_FLAT_WAGON(NAME) \
	GEN1_FLAT_LIVERY(NAME, L1, 1) \
	GEN1_FLAT_LIVERY(NAME, L2, 179) \
	GEN1_FLAT_LIVERY(NAME, L3, 357) \
	GEN1_FLAT_LIVERY(NAME, L4, 535) \
	random_switch(FEAT_TRAINS, SELF, switch_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _livery) { \
		7: spritegroup_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _L1; \
		1: spritegroup_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _L2; \
		1: spritegroup_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _L3; \
		1: spritegroup_wagon_Narrow_Gen1_Flat_Wagon_ ## NAME ## _L4; \
	}


