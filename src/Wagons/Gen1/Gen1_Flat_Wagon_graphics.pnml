//Goods and Engineering Supplies have multiple liveries
random_switch(FEAT_TRAINS, SELF, switch_wagon_Narrow_Gen1_Flat_Wagon_Goods_livery) {
	7: switch_wagon_Narrow_Gen1_Flat_Wagon_Crates_livery;
	3: switch_wagon_Narrow_Gen1_Flat_Wagon_Machinery_livery;
}

//Building materials can be planks or steel rolls
random_switch(FEAT_TRAINS, SELF, switch_wagon_Narrow_Gen1_Flat_Wagon_Building_Materials_livery) {
	1: switch_wagon_Narrow_Gen1_Flat_Wagon_Planks_livery;
	1: switch_wagon_Narrow_Gen1_Flat_Wagon_Steel_livery;
}

switch(FEAT_TRAINS, SELF, switch_wagon_Narrow_Gen1_Flat_Wagon_cargo_selection, cargo_type_in_veh) {
	GOOD: switch_wagon_Narrow_Gen1_Flat_Wagon_Goods_livery;
	WOOD: switch_wagon_Narrow_Gen1_Flat_Wagon_Wood_livery;
	STEL: switch_wagon_Narrow_Gen1_Flat_Wagon_Steel_livery;
	BDMT: switch_wagon_Narrow_Gen1_Flat_Wagon_Building_Materials_livery;
	ENSP: switch_wagon_Narrow_Gen1_Flat_Wagon_Goods_livery;
	WDPR: switch_wagon_Narrow_Gen1_Flat_Wagon_Planks_livery;
	switch_wagon_Narrow_Gen1_Flat_Wagon_Crates_livery; //TOYS, BATT, SWET, BUBL, FZDR, BRCK, CERA, COPR, FICR, FMSP, JAVA, MNSP
}

